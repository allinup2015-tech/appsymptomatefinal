<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- 메인 콘텐츠 -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 툴바 -->
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/Theme.Answer.AppBarOverlay">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/Theme.Answer.PopupOverlay" />
        </com.google.android.material.appbar.AppBarLayout>

        <!-- 스크롤 가능한 콘텐츠 -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- 프로필 카드 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp"
                        android:gravity="center">

                        <!-- 프로필 아이콘 -->
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_user_signed_in"
                            android:background="@drawable/profile_circle_bg"
                            android:padding="16dp"
                            android:layout_marginBottom="16dp"
                            android:contentDescription="Profile Image" />

                        <!-- 사용자 이름 -->
                        <TextView
                            android:id="@+id/user_name_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="John Doe"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginBottom="8dp" />

                        <!-- 이메일 -->
                        <TextView
                            android:id="@+id/user_email_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="john.doe@example.com"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:textColor="@android:color/darker_gray"
                            android:layout_marginBottom="8dp" />

                        <!-- 계정 상태 -->
                        <TextView
                            android:id="@+id/account_status_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/account_verified"
                            android:textSize="14sp"
                            android:background="@drawable/status_background_green"
                            android:textColor="@android:color/white" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- 계정 관리 섹션 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/account_management"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"
                    android:textColor="@android:color/black" />

                <!-- 녹음 히스토리 버튼 -->
                <Button
                    android:id="@+id/recording_history_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/view_recording_history"
                    android:textSize="16sp"
                    android:padding="16dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/button_background"
                    android:drawablePadding="8dp"
                    style="?android:attr/borderlessButtonStyle" />

                <!-- 개인정보 설정 버튼 -->
                <Button
                    android:id="@+id/privacy_settings_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/privacy_settings"
                    android:textSize="16sp"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/button_background"
                    android:drawablePadding="8dp"
                    style="?android:attr/borderlessButtonStyle" />

                <!-- 계정 작업 섹션 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/account_actions"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"
                    android:textColor="@android:color/black" />

                <!-- 로그아웃 버튼 -->
                <Button
                    android:id="@+id/sign_out_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sign_out"
                    android:textSize="16sp"
                    android:padding="16dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/secondary_button_bg"
                    android:textColor="@android:color/black"
                    style="?android:attr/borderlessButtonStyle" />

                <!-- 계정 삭제 버튼 -->
                <Button
                    android:id="@+id/delete_account_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/delete_account"
                    android:textSize="16sp"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/button_background_red"
                    android:textColor="@android:color/white"
                    style="?android:attr/borderlessButtonStyle" />
                <!-- 정보 카드 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#F3F4F6">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/privacy_security"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/privacy_description"
                            android:textSize="12sp"
                            android:lineSpacingExtra="2dp"
                            android:textColor="@android:color/darker_gray" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- NavigationView (사이드바) -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/activity_main_drawer" />

</androidx.drawerlayout.widget.DrawerLayout>